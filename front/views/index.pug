extends layout

block content
    
    h1.text-center #{title}
        h3.text-center Service where you can share interesting news for you
    
    div
        ul.list-group
            each post, i in posts 
                li
                    hr
                    //a(href='/post/'+post._id)= post.title
                    h4 #{post.title}  â—† 
                        small by #{post.author}
                    a(href="/post/"+post._id, class="pull-right") Share
                    br
                    span(class="pull-right")=moment(post.created).format("DD.MM.YYYY HH:mm")
                    img.img-responsive.img-sm(src=post.img_url)
                    br
        div(style="text-align:center;")
            nav(aria-label='Page navigation')
              ul.pagination
                - for (var i = 1; i < pages; i++)
                    li
                        a(href='/?page='+i)=i